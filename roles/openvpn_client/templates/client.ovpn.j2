client
dev tun
proto udp
remote my-server-1 1194
resolv-retry infinite
nobind
user nobody
group nogroup
persist-key
persist-tun
remote-cert-tls server
cipher AES-256-CBC
verb 3
<ca>
{{ lookup('file', '/etc/openvpn/easy-rsa/keys/ca.crt') }}
</ca>
<cert>
{{ lookup('file', '/etc/openvpn/easy-rsa/keys/{{ client_name }}.crt') }}
</cert>
<key>
{{ lookup('file', '/etc/openvpn/easy-rsa/keys/{{ client_name }}.key') }}
</key>
